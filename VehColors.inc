stock IsModelDefaultColor(modelid,colorid)
{
	for(new c=0,cmax=sizeof(i_VehDefaultColor[modelid-400]); i < cmax; c++)
		if(i_VehDefaultColor[modelid - 400][c] == colorid)
			return true;

	return false;
}

